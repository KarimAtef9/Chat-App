<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">



        <LinearLayout
            android:id="@+id/message_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/right_background">

            <ImageView
                android:id="@+id/message_image"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:padding="5dp"
                android:src="@mipmap/ic_launcher"
                android:scaleType="centerCrop"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:maxWidth="300dp"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:layout_marginRight="5dp"
                    android:text="aloooooooooooooooooooooooooooooooo"
                    android:background="@drawable/right_background"
                    android:id="@+id/message"
                    android:textSize="18sp"
                    android:layout_marginEnd="5dp" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:text="10:20"
                    android:paddingRight="6dp"
                    android:paddingBottom="6dp"
                    android:layout_gravity="bottom"/>

            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/message_seen"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/message_layout"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/message_layout" />


    </RelativeLayout>

</RelativeLayout>